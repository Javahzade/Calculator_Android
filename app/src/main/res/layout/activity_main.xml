<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:ellipsize="end"
        android:gravity="bottom|center|right"
        android:textColor="@android:color/white"
        android:textIsSelectable="false"
        app:autoSizeMaxTextSize="80sp"
        app:autoSizeMinTextSize="40sp"
        app:autoSizeStepGranularity="10sp"
        app:autoSizeTextType="uniform"
        tools:ignore="RtlCompat"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_clear"
                style="@style/actionButton"
                android:layout_width="196.5dp"
                android:background="#A4AFAFAF"
                android:onClick="clearButton"
                android:text="C" />

            <Button
                android:id="@+id/b_divide"
                style="@style/actionButton"
                android:background="#A4AFAFAF"
                android:onClick="divideButton"
                android:text="/" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_7"
                style="@style/numberButton"
                android:onClick="sevenButton"
                android:text="7" />

            <Button
                android:id="@+id/b_8"
                style="@style/numberButton"
                android:onClick="eightButton"
                android:text="8" />

            <Button
                android:id="@+id/b_9"
                style="@style/numberButton"
                android:onClick="nineButton"
                android:text="9" />

            <Button
                android:id="@+id/b_multiply"
                style="@style/actionButton"
                android:background="#A4AFAFAF"
                android:onClick="multiplyButton"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_4"
                style="@style/numberButton"
                android:onClick="fourButton"
                android:text="4" />

            <Button
                android:id="@+id/b_5"
                style="@style/numberButton"
                android:onClick="fiveButton"
                android:text="5" />

            <Button
                android:id="@+id/b_6"
                style="@style/numberButton"
                android:onClick="sixButton"
                android:text="6" />

            <Button
                android:id="@+id/b_minus"
                style="@style/actionButton"
                android:background="#A4AFAFAF"
                android:onClick="minusButton"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_1"
                style="@style/numberButton"
                android:onClick="oneButton"
                android:text="1" />

            <Button
                android:id="@+id/b_2"
                style="@style/numberButton"
                android:onClick="twoButton"
                android:text="2" />

            <Button
                android:id="@+id/b_3"
                style="@style/numberButton"
                android:onClick="threeButton"
                android:text="3" />

            <Button
                android:id="@+id/b_plus"
                style="@style/actionButton"
                android:background="#A4AFAFAF"
                android:onClick="plusButton"
                android:text="+"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b_0"
                style="@style/numberButton"
                android:layout_width="98dp"
                android:onClick="zeroButton"
                android:text="0" />

            <Button
                android:id="@+id/b_dot"
                style="@style/numberButton"
                android:onClick="dotButton"
                android:text="." />

            <Button
                android:id="@+id/b_equality"
                style="@style/actionButton"
                android:background="#A4AFAFAF"
                android:onClick="equalityButton"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>